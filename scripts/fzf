#!/usr/bin/env bash

# todo: make this an actual temp file-- this was the fastest cross platform way to keep cleanup
file="$(elisp -r '(~ "fzftemp")')"

if [ -p /dev/stdin ]; then
    cat - > "$file"
else
    rg --files "$@" > "$file"
fi

elisp -r '(ivy-read "" (s-split "\n" (f-read "'"$file"'")) :action (lambda(option) option))'
